<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@android:color/white">

    <!-- Tombol Kembali -->
    <TextView
        android:id="@+id/btnBack"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Kembali"
        android:textColor="#0B81FF"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_outline_blue"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Judul -->
    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profil"
        android:textColor="#00A400"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Foto Profil -->
    <ImageView
        android:id="@+id/profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:background="@drawable/circle_mask"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Icon Edit -->
    <ImageView
        android:id="@+id/btnEditProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/edit"
        android:background="@drawable/circle_mask"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        app:layout_constraintEnd_toEndOf="@id/profile"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp" />

    <!-- Nama -->
    <EditText
        android:id="@+id/editNama"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Nama Baru"
        android:paddingStart="15dp"
        android:background="@drawable/bg_btn_outline_green"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Email Baru"
        android:paddingStart="15dp"
        android:background="@drawable/bg_btn_outline_gray"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/editNama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Telepon -->
    <EditText
        android:id="@+id/editTelepon"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Telepon Baru"
        android:paddingStart="15dp"
        android:background="@drawable/bg_btn_outline_gray"
        android:inputType="phone"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password -->
    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Password Baru"
        android:paddingStart="15dp"
        android:background="@drawable/bg_btn_outline_gray"
        android:inputType="textPassword"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/editTelepon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ulangi Password -->
    <EditText
        android:id="@+id/editUlangiPassword"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="Ulangi Password Baru"
        android:paddingStart="15dp"
        android:background="@drawable/bg_btn_outline_gray"
        android:inputType="textPassword"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Simpan -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Simpan"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/button_green_sejarah"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/editUlangiPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
