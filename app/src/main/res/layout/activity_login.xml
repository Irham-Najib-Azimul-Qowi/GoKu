<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/goku_primary"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

        <EditText
            android:id="@+id/etEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/selector_input_field"
            android:hint="Email atau Telepon"
            android:textColor="@color/black"
            android:textColorHint="@color/goku_card_gray"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <EditText
            android:id="@+id/etPassLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/selector_input_field"
            android:hint="Password"
            android:textColor="@color/black"
            android:textColorHint="@color/goku_card_gray"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lupa Password?"
            android:textColor="@color/goku_hover_blue"
            android:gravity="start"
            android:layout_marginBottom="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKembaliLogin"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Kembali"
                android:textColor="@color/goku_hover_blue"
                android:background="@drawable/selector_btn_outline"
                android:layout_marginEnd="8dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMasukAction"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Masuk"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn_primary"
                android:layout_marginStart="8dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>