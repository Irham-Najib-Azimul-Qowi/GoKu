<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="#E0E0E0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/etJemputReview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn_outline_green"
            android:text="Kampus 1 PNM"
            android:textSize="14sp"
            android:textColor="#888888"
            android:paddingStart="16dp"
            android:enabled="false"
            android:drawableEnd="@drawable/input_jemput"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/etTujuanReview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_btn_outline_green"
            android:text="Gacoan"
            android:textSize="14sp"
            android:textColor="#888888"
            android:paddingStart="16dp"
            android:enabled="false"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:id="@+id/layoutDiskon"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_banner_green"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diskon"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 5.000"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_banner_green"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Biaya"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvTotalHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.4"
                android:text="Batal"
                android:textColor="#00B0FF"
                android:background="@drawable/bg_btn_outline_blue"
                android:textAllCaps="false"
                android:layout_marginEnd="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCariDriver"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="0.6"
                android:text="Cari Driver"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/goku_primary"
                app:cornerRadius="25dp"
                android:textAllCaps="false"
                app:icon="@drawable/motor"
                app:iconGravity="textEnd"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>