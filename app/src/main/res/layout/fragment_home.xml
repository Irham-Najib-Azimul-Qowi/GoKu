<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeFragment">

    <View
        android:id="@+id/viewGreenBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_card_home_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMenu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/filter"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Menu Filter" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_search_rounded"
        android:hint="Cari layanan..."
        android:paddingStart="20dp"
        android:paddingEnd="16dp"
        android:textSize="14sp"
        android:inputType="text"
        android:maxLines="1"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"

        app:layout_constraintStart_toEndOf="@id/ivMenu"
        app:layout_constraintEnd_toStartOf="@id/ivSearch"
        app:layout_constraintTop_toTopOf="@id/ivMenu"
        app:layout_constraintBottom_toBottomOf="@id/ivMenu"
        tools:ignore="Autofill,HardcodedText" />

    <ImageView
        android:id="@+id/ivSearch"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/cari"
        android:contentDescription="Ikon Pencarian"
        android:layout_marginEnd="24dp"
        app:tint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivMenu" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMotor"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="Tombol Menu Layanan Motor"

        app:cardBackgroundColor="@color/selector_card_green"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="12dp"

        app:layout_constraintBottom_toTopOf="@id/cardTiket"
        app:layout_constraintEnd_toStartOf="@+id/guidelineCenter">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/motor"
            app:tint="@color/white"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMobil"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="Tombol Menu Layanan Mobil"

        app:cardBackgroundColor="@color/selector_card_green"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="12dp"

        app:layout_constraintBottom_toTopOf="@id/cardTiket"
        app:layout_constraintStart_toEndOf="@+id/guidelineCenter">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mobil"
            app:tint="@color/white"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTiket"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"

        app:cardBackgroundColor="@color/selector_card_gray"

        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="50dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tiket_bus"
                app:tint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiket Bus"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>