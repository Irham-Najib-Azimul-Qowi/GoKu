<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMapRouteBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/dummy_map_line"
        android:contentDescription="Peta Rute"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#E0E0E0"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <EditText
                android:id="@+id/etPickupPoint"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/selector_input_field"
                android:text="Kampus 1 PNM"
                android:paddingStart="20dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                android:enabled="false"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/input_jemput"
                android:contentDescription="Ikon Titik Jemput"
                android:layout_marginEnd="16dp"
                app:tint="@color/black"
                app:layout_constraintEnd_toEndOf="@id/etPickupPoint"
                app:layout_constraintTop_toTopOf="@id/etPickupPoint"
                app:layout_constraintBottom_toBottomOf="@id/etPickupPoint" />

            <EditText
                android:id="@+id/etDestination"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_input_field"
                android:text="Gacoan"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@id/etPickupPoint"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bannerTotalBiaya"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_banner_green"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/etDestination">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Biaya"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBatalKonfirmasi"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/selector_btn_outline"
                android:text="Batal"
                android:textColor="#1db5e4"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnCariDriver"
                app:layout_constraintTop_toBottomOf="@id/bannerTotalBiaya"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCariDriver"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:background="@drawable/selector_btn_primary"
                app:backgroundTint="@null"
                android:text="-  Cari Driver"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="21dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/btnBatalKonfirmasi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBatalKonfirmasi"
                app:layout_constraintTop_toTopOf="@id/btnBatalKonfirmasi"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>