<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/viewHeaderCurve"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/bg_top_curved_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfileBig"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:cardBackgroundColor="#CCCCCC"
        app:cardElevation="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            app:tint="#757575"
            android:contentDescription="Foto Driver"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvDriverNameBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum Person"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cvProfileBig"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/layoutStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/viewHeaderCurve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/bintang" app:tint="@color/goku_accent_green" android:layout_marginEnd="8dp"/>
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/bintang" app:tint="@color/goku_accent_green" android:layout_marginEnd="8dp"/>
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/bintang" app:tint="@color/goku_accent_green" android:layout_marginEnd="8dp"/>
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/bintang" app:tint="#888888" android:layout_marginEnd="8dp"/>
        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/bintang" app:tint="#888888"/>
    </LinearLayout>

    <EditText
        android:id="@+id/etReview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        android:background="@drawable/bg_input_area"
        android:hint="Tulis Pesan"
        android:gravity="top|start"
        android:padding="24dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/layoutStars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="Autofill,HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmitReview"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_margin="24dp"
        android:background="@drawable/selector_btn_primary"
        app:backgroundTint="@null"
        android:text="Kirim"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="14sp"
        app:cornerRadius="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>