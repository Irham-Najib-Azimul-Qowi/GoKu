<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".TiketBusActivity">

    <!-- TOP GREEN BACKGROUND -->
    <View
        android:id="@+id/viewGreenBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_top_curved_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.65"/>

    <!-- BUTTON KEMBALI -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKembali"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Kembali"
        android:textColor="@color/goku_hover_blue"
        android:background="@drawable/bg_btn_outline_blue"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- JUDUL -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiket Bus"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/btnKembali"
        app:layout_constraintBottom_toBottomOf="@id/btnKembali"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD FORM -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="#E0E0E0"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnKembali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/etTitikBerangkat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_input_white"
                android:hint="Titik Berangkat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/goku_card_gray"
                android:drawableStart="@drawable/pinmap"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/etTujuan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_white"
                android:hint="Tujuan"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/goku_card_gray"
                android:drawableStart="@drawable/pinmap"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/etTanggalBerangkat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_white"
                android:hint="Tanggal Berangkat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/goku_card_gray"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:drawableStart="@drawable/calendar"
                android:drawablePadding="10dp"/>

            <EditText
                android:id="@+id/etJumlahKursi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_white"
                android:hint="Jumlah Kursi"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/goku_card_gray"
                android:inputType="number"
                android:drawableStart="@drawable/chair"
                android:drawablePadding="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBatal"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="Batal"
                    android:textColor="@color/goku_hover_blue"
                    android:background="@drawable/selector_btn_outline"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCariTiket"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="Cari Tiket"
                    android:textColor="@color/white"
                    android:background="@drawable/selector_btn_primary"
                    app:backgroundTint="@null"
                    app:cornerRadius="25dp"
                    android:layout_marginStart="8dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:icon="@drawable/bus"
                    app:iconTint="@color/white"
                    app:iconGravity="textEnd"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
