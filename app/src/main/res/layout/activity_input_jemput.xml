<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMapBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/map"
        android:contentDescription="Peta Latar Belakang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardBackgroundColor="#E0E0E0"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <EditText
                android:id="@+id/etDari"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/selector_input_field"
                android:hint="Dari"
                android:paddingStart="20dp"
                android:paddingEnd="50dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/input_jemput"
                android:contentDescription="Ikon Lokasi"
                android:layout_marginEnd="16dp"
                app:tint="@color/black"
                app:layout_constraintEnd_toEndOf="@id/etDari"
                app:layout_constraintTop_toTopOf="@id/etDari"
                app:layout_constraintBottom_toBottomOf="@id/etDari" />

            <EditText
                android:id="@+id/etKe"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/selector_input_field"
                android:hint="Ke"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/etDari"
                tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/selector_btn_outline"
                android:text="Batal"
                android:textColor="#1db5e4"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnKonfirmasi"
                app:layout_constraintTop_toBottomOf="@id/etKe"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKonfirmasi"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:background="@drawable/selector_btn_primary"
                app:backgroundTint="@null"
                android:text="konfirmasi"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="21dp"
                app:icon="@drawable/motor"
                app:iconGravity="textEnd"
                app:iconTint="@color/white"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/btnBatal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBatal"
                app:layout_constraintTop_toTopOf="@id/btnBatal"
                tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>