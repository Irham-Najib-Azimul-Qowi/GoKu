<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PembayaranBusActivity">

    <!-- BACKGROUND HIJAU + CHILDREN -->
    <FrameLayout
        android:id="@+id/greenContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_top_curved_green"
        android:paddingTop="60dp"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingHorizontal="24dp">

            <!-- JUDUL -->
            <TextView
                android:id="@+id/tvJudulPembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pembayaran"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp" />

            <!-- CARD PUTIH (ISI DETAIL PEMBAYARAN) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Asal -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_input_white"
                        android:text="Madiun"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableEnd="@drawable/mata"
                        android:drawablePadding="8dp" />

                    <!-- Tujuan -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_input_white"
                        android:text="Ponorogo"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp" />

                    <!-- Tanggal -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_input_white"
                        android:text="23 Agustus 2025"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableStart="@drawable/calendar"
                        android:drawablePadding="8dp" />

                    <!-- Jumlah Kursi -->
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_input_white"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableStart="@drawable/chair"
                        android:drawablePadding="8dp" />

                    <!-- QR CODE -->
                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/scan_qris"
                        android:contentDescription="QR Code Pembayaran" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TOMBOL KEMBALI -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Kembali ke Beranda"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/goku_primary"
                android:background="@drawable/selector_btn_white"
                app:cornerRadius="24dp"
                app:backgroundTint="@null" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
