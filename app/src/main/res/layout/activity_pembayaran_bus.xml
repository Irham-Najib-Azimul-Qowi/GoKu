<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PembayaranBusActivity">


    <TextView
        android:id="@+id/tvJudulPembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pembayaran"
        android:textColor="@color/goku_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardGreenBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/goku_primary"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintDimensionRatio="1:1.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvJudulPembayaran"
        app:layout_constraintWidth_percent="0.75">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardContent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_input_white"
                        android:text="Madiun"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableEnd="@drawable/mata"
                        app:drawableTint="@color/goku_card_gray"
                        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_white"
                        android:text="Ponorogo"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_white"
                        android:text="23 Agustus 2025"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableStart="@drawable/calendar"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/goku_card_gray"
                        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_white"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:enabled="false"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:drawableStart="@drawable/chair"
                        android:drawablePadding="8dp"
                        app:drawableTint="@color/goku_card_gray"
                        tools:ignore="Autofill,HardcodedText,TouchTargetSizeCheck" />

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/scan_qris"
                        android:contentDescription="QR Code Pembayaran" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRateKami"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:background="@drawable/selector_btn_white"
                app:backgroundTint="@null"
                android:text="Nilai Kami"
                android:textColor="@color/goku_primary"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="12dp"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>