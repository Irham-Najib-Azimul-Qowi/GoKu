<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Driver keluar rute!"
                android:textColor="#FF3B30"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Silahkan gunakan telepon darurat!"
                android:textColor="#FF3B30"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPickup"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_input_white"
                android:drawableEnd="@android:drawable/ic_menu_mylocation"
                android:drawableTint="#888888"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                android:text="Kampus 1 PNM"
                android:textColor="#757575"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                android:inputType="none"
                tools:ignore="Autofill,TextFields" />

            <EditText
                android:id="@+id/etDestination"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_white"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Gacoan"
                android:textColor="#757575"
                android:textSize="14sp"
                android:focusable="false"
                android:clickable="false"
                android:inputType="none"
                tools:ignore="Autofill,TextFields" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEmergency"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:text="Telepon Darurat!"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FF3B30"
                app:cornerRadius="30dp"
                app:icon="@drawable/call_end_2"
                app:iconGravity="textStart"
                app:iconPadding="10dp"
                app:iconTint="@android:color/white"
                android:elevation="6dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>