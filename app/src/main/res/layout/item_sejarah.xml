<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/history_card_sejarah"
    android:elevation="5dp"
    android:padding="12dp"
    android:orientation="vertical"
    android:layout_marginBottom="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvTanggalWaktu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="23 Agu 2025, 17:09"
            android:textColor="#777777"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 15.000"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <ImageView
            android:id="@+id/ivLayananIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mobil"
            app:tint="@color/black"
            android:layout_marginRight="10dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kampus 1 PNM â†’ Gacoan"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="14sp"
                tools:ignore="HardcodedText"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/sejarah"
                    app:tint="@color/goku_primary"
                    android:layout_marginRight="5dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perjalanan Selesai"
                    android:textColor="#4CAF50"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPesanLagi"
            android:textAllCaps="false"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Lagi!"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_green_sejarah"
            android:textStyle="bold"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>